<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/Doctors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">


                <RelativeLayout
                    android:id="@+id/lay_rel_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/img_home_profile_pic"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:src="@drawable/no_image" />

                </RelativeLayout>


                <!--<de.hdodenhof.circleimageview.CircleImageView-->
                <!--android:id="@+id/profile_image"-->
                <!--android:layout_width="130dp"-->
                <!--android:layout_height="85dp"-->
                <!--android:layout_gravity="bottom|center_horizontal"-->
                <!--android:src="@drawable/powerw" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Doctername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/ralewaymedium"
                        android:text="Dr. Shreyas Shah"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/map_marker" />

                        <TextView
                            android:id="@+id/location"
                            android:layout_width="match_parent"
                            android:padding="2dp"
                            android:paddingLeft="5dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/ralewaymedium"
                            android:text="Dr. Shreyas Shah"
                            android:textColor="@color/doctext"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/timer" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/Docter_Time"
                            android:paddingLeft="5dp"
                            android:fontFamily="@font/ralewaymedium"
                            android:text="10am - 9pm"
                            android:textStyle="bold"
                            android:textColor="@color/doctext"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:weightSum="2">

                        <me.zhanghai.android.materialratingbar.MaterialRatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:max="5"
                            android:isIndicator="true"
                            android:layout_gravity="center"
                            android:numStars="5"
                            android:visibility="gone"
                            android:layout_weight="1"
                            android:rating="2.6"
                            style="@style/Widget.MaterialRatingBar.RatingBar.Indicator.Small" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/OpenMAp"
                            android:layout_weight="1"
                            android:background="@color/docbutton"
                            android:fontFamily="@font/ralewaymedium"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="View Map"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:id="@+id/Booknow"
                            android:layout_weight="1"
                            android:background="@color/docbutton"
                            android:fontFamily="@font/ralewaymedium"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Cancel Appointment"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Doctors">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>